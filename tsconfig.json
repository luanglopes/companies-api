{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@infra/*": [
        "infra/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
